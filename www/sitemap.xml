---
# Remember to set production_url in your _config.yml file!
title : Sitemap
noindex: true
layout: none
---
{% assign sorted_pages = site.pages | sort:'url' %}{% assign logocount = 0 %}{% assign pagecount = 0 %}<urlset
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9"
	xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{% for thePage in sorted_pages %}{% if thePage.noindex %}{% elsif thePage.title.size > 0 %}	<url><loc>{{site.production_url}}{{ thePage.url }}{% if thePage.logohandle %}{% assign logocount = logocount | plus:1 %}{% endif %}{% assign pagecount = pagecount | plus:1 %}</loc></url>
{% endif %}{% endfor %}
{% for post in site.posts %}{% if post.noindex %}{% else %}	<url><loc>{{site.production_url}}{{ post.url }}{% assign pagecount = pagecount | plus:1 %}</loc></url>
{% endif %}{% endfor %}</urlset>
<!-- logos: {{logocount}} pages: {{pagecount}} -->

